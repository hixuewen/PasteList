<Window x:Class="PasteList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasteList"
        mc:Ignorable="d"
        Title="剪贴板历史记录" Height="600" Width="900" MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部搜索和控制区域 -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 搜索框 -->
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14" 
                         Padding="8"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <Label Content="搜索历史记录..." Foreground="Gray" FontSize="14"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- 监听控制按钮 -->
                <Button Grid.Column="1" 
                        Content="开始监听" 
                        Command="{Binding StartListeningCommand}"
                        Padding="15,5"
                        Margin="0,0,5,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Grid.Column="2" 
                        Content="停止监听" 
                        Command="{Binding StopListeningCommand}"
                        Padding="15,5"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- 历史记录列表 -->
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding ClipboardItems}"
                  SelectedItem="{Binding SelectedItem}"
                  Margin="10"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="内容" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Content}" 
                                          TextTrimming="CharacterEllipsis"
                                          ToolTip="{Binding Content}"
                                          Margin="5,2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            

        </ListView>
        

        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Background="#EEEEEE">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="总计: " FontSize="12"/>
                    <TextBlock Text="{Binding TotalCount}" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text=" 项" FontSize="12"/>
                    <TextBlock Text=" | 监听状态: " FontSize="12" Margin="10,0,0,0"/>
                    <TextBlock FontSize="12" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsListening}" Value="True">
                                        <Setter Property="Text" Value="监听中"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsListening}" Value="False">
                                        <Setter Property="Text" Value="已停止"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
